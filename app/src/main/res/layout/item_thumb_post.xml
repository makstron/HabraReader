<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:cardBackgroundColor="@color/post_thumb_bg"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivPostImage"
                android:layout_width="0dp"
                android:layout_height="165dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_terrain" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivAuthorLogo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvTitle"
                app:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/primary_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/ivOpenShortDescription"
                app:layout_constraintStart_toEndOf="@+id/ivAuthorLogo"
                app:layout_constraintTop_toBottomOf="@+id/ivPostImage"
                tools:text="Внедрение C" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivOpenShortDescription"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_marginEnd="16dp"
                android:adjustViewBounds="true"
                android:padding="4dp"
                android:scaleType="fitCenter"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_min="32dp"
                app:layout_constraintTop_toTopOf="@+id/tvTitle"
                app:srcCompat="@drawable/ic_arrow_up"
                app:tint="#878787" />

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/primary_blue"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/tvTitle"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                tools:text="Klim" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/post_thumb_text"
                android:textSize="14sp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAuthor"
                tools:text="Всем привет! Это третья, завершающая, часть нашего рассказа о том, как «Ростелеком ИТ» внедряет CI/CD &amp; DevOps в энтерпрайзовый ИТ-ландшафт и тяжелые монолитные Legacy-системы. Первую часть про внедрение CI/CD в десятки проектных команд очень большой компании можно прочитать на Хабре по ссылке " />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivVotes"
                android:layout_width="10dp"
                android:layout_height="14dp"
                android:layout_marginEnd="4dp"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="@+id/tvAuthor"
                app:layout_constraintEnd_toStartOf="@+id/tvVotesCount"
                app:layout_constraintTop_toTopOf="@+id/tvAuthor"
                app:srcCompat="@drawable/ic_vote"
                app:tint="@color/primary_blue" />

            <TextView
                android:id="@+id/tvVotesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:textColor="@color/primary_blue"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvAuthor"
                app:layout_constraintEnd_toStartOf="@+id/ivBookmarks"
                app:layout_constraintTop_toTopOf="@+id/tvAuthor"
                tools:text="0" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBookmarks"
                android:layout_width="10dp"
                android:layout_height="14dp"
                android:layout_marginEnd="4dp"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="@+id/tvAuthor"
                app:layout_constraintEnd_toStartOf="@+id/tvBookmarksCount"
                app:layout_constraintTop_toTopOf="@+id/tvAuthor"
                app:srcCompat="@drawable/ic_bookmark"
                app:tint="@color/primary_blue" />

            <TextView
                android:id="@+id/tvBookmarksCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:textColor="@color/primary_blue"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvAuthor"
                app:layout_constraintEnd_toStartOf="@+id/ivViews"
                app:layout_constraintTop_toTopOf="@+id/tvAuthor"
                tools:text="0" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivViews"
                android:layout_width="18dp"
                android:layout_height="14dp"
                android:layout_marginEnd="4dp"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="@+id/tvAuthor"
                app:layout_constraintEnd_toStartOf="@+id/tvViewCount"
                app:layout_constraintTop_toTopOf="@+id/tvAuthor"
                app:srcCompat="@drawable/ic_view"
                app:tint="@color/primary_blue" />

            <TextView
                android:id="@+id/tvViewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:textColor="@color/primary_blue"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvAuthor"
                app:layout_constraintEnd_toStartOf="@+id/ivComments"
                app:layout_constraintTop_toTopOf="@+id/tvAuthor"
                tools:text="0" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivComments"
                android:layout_width="13dp"
                android:layout_height="14dp"
                android:layout_marginEnd="4dp"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="@+id/tvAuthor"
                app:layout_constraintEnd_toStartOf="@+id/tvCommentsCount"
                app:layout_constraintTop_toTopOf="@+id/tvAuthor"
                app:srcCompat="@drawable/ic_comment"
                app:tint="@color/primary_blue" />

            <TextView
                android:id="@+id/tvCommentsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/primary_blue"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvAuthor"
                app:layout_constraintEnd_toEndOf="@+id/tvTitle"
                app:layout_constraintTop_toTopOf="@+id/tvAuthor"
                tools:text="0" />

            <TextView
                android:id="@+id/tvCreatedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:textColor="#878787"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDescription"
                tools:text="сегодня в 15:23" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>